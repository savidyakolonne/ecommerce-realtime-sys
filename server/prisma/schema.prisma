datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  CUSTOMER
  POS_OPERATOR
  BRANCH_MANAGER
  HQ_ADMIN
}

enum OrderType {
  PICKUP
  DELIVERY
}

enum OrderStatus {
  PENDING
  ACCEPTED
  PACKING
  READY
  COMPLETED
  CANCELLED
}

enum MovementReason {
  SALE
  RETURN
  RESTOCK
  ADJUSTMENT
}

model Branch {
  id        String   @id @default(cuid())
  name      String
  address   String?
  lat       Float?
  lng       Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  terminals PosTerminal[]
  inventory Inventory[]
  orders    Order[]
  movements InventoryMovement[]
}

model PosTerminal {
  id         String    @id @default(cuid())
  branchId   String
  name       String
  deviceCode String    @unique
  lastSeenAt DateTime?
  createdAt  DateTime  @default(now())

  branch    Branch              @relation(fields: [branchId], references: [id])
  movements InventoryMovement[]
}

model Product {
  id        String   @id @default(cuid())
  sku       String   @unique
  name      String
  price     Int // store in cents (LKR * 100)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  inventory Inventory[]
  items     OrderItem[]
  movements InventoryMovement[]
}

model Inventory {
  branchId     String
  productId    String
  qty          Int
  thresholdQty Int       @default(5)
  expiryDate   DateTime?
  updatedAt    DateTime  @updatedAt

  branch  Branch  @relation(fields: [branchId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@id([branchId, productId]) // composite PK
}

model Order {
  id         String      @id @default(cuid())
  customerId String? // keep optional for now (weâ€™ll add users later)
  branchId   String
  orderType  OrderType
  status     OrderStatus @default(PENDING)
  total      Int         @default(0)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  branch Branch      @relation(fields: [branchId], references: [id])
  items  OrderItem[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  qty       Int
  unitPrice Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model InventoryMovement {
  id         String         @id @default(cuid())
  branchId   String
  productId  String
  terminalId String?
  userId     String?
  delta      Int
  reason     MovementReason
  createdAt  DateTime       @default(now())

  branch   Branch       @relation(fields: [branchId], references: [id])
  product  Product      @relation(fields: [productId], references: [id])
  terminal PosTerminal? @relation(fields: [terminalId], references: [id])
}
