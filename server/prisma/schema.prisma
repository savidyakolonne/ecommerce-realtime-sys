datasource db {
  provider = "postgresql"
  url      = env("https://supabase.com/dashboard/project/gvzbghsrroivinjviard")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String  // customer, cashier, admin, manager
  orders   Order[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  sku         String   @unique
  category    String?
  description String?
  inventory   Inventory[]
  items       OrderItem[]
}

model Branch {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  inventory Inventory[]
  orders    Order[]
}

model Inventory {
  id        Int      @id @default(autoincrement())
  productId Int
  branchId  Int
  stock     Int      @default(0)

  product Product @relation(fields: [productId], references: [id])
  branch  Branch  @relation(fields: [branchId], references: [id])
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  branchId  Int
  total     Float
  status    String
  createdAt DateTime @default(now())

  user   User     @relation(fields: [userId], references: [id])
  branch Branch   @relation(fields: [branchId], references: [id])
  items  OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  qty       Int
  price     Float

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Prediction {
  id            Int      @id @default(autoincrement())
  productId     Int
  branchId      Int
  date          DateTime
  expectedSales Float
  createdAt     DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])
  branch  Branch  @relation(fields: [branchId], references: [id])
}
